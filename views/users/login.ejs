<% layout('layouts/boilerplate') %>



<div class="container d-flex justify-content-center align-items-center mt-3 mb-5">
  <div class="col-12 col-md-6 col-xl-4 offset-xl-4 mx-auto">
    <div class="card shadow">
      <img src="https://images.unsplash.com/photo-1478815716600-15f0c3eb8e4b?w=800&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NTV8fGNhbXBpbmd8ZW58MHx8MHx8fDA%3D" alt="" class="card-img-top" />
      <div class="card-body">
        <h5 class="card-title">Login</h5>
        <form action="/login" method="POST" class="validated-form" novalidate>
          <div class="mb-3">
            <label class="form-label" for="username">Username</label>
            <input class="form-control" type="text" id="username" name="username" autofocus required>
            <div class="valid-feedback">
              Looks good!
            </div>
          </div>

          <div class="mb-5">
            <label class="form-label" for="password">Password</label>
            <input class="form-control" type="password" id="password" name="password" required>
            <div class="valid-feedback">
              Looks good!
            </div>
          </div>
          <div class="d-grid">
            <button class="btn btn-success">Login</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>